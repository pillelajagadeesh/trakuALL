<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinatorlayout"
    android:fitsSystemWindows="true"
    >
<LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_dp"
        android:layout_alignParentTop="true"
        android:background="@color/menutoolbar">

        <RelativeLayout
            android:id="@+id/rlBack"
            android:layout_width="@dimen/thirty_dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/fifteen_dp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/twenty_dp"
                android:layout_height="@dimen/twenty_dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_icon"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/btEdit"
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="@dimen/twenty_dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/twenty_five_dp"
            android:background="@drawable/edit_btn"/>

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/fifteen_dp"
            android:layout_toRightOf="@+id/rlBack"
            android:textColor="@android:color/white"
            android:textSize="@dimen/twenty_sp"
            />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true"
        android:padding="@dimen/five_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fifteen_dp"
            android:layout_marginRight="@dimen/fifteen_dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/casetype"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvCaseType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/createddate"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvCreateDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/updateddate"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvUpdateDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/address"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:onClick="clickToMap"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/escalated"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvEscalated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/status"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/reportedby"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvReportedBy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/assignto"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvAssignedTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/updatedby"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvUpdateBy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/assignedby"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvAssignedBy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/images"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <LinearLayout
                    android:id="@+id/llImageLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:orientation="horizontal"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

</android.support.design.widget.CoordinatorLayout>
