<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_dp"
        android:layout_alignParentTop="true"
        android:background="@color/menutoolbar">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_toRightOf="@+id/rlBack"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="@dimen/twenty_sp"
            />

        <RelativeLayout
            android:id="@+id/rlBack"
            android:layout_width="@dimen/thirty_dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/fifteen_dp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/twenty_dp"
                android:layout_height="@dimen/twenty_dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_icon"/>
        </RelativeLayout>

        <Button
            android:id="@+id/btEdit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/thirty_five_dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ten_dp"
            android:background="@drawable/button"
            android:text="@string/edit"
            android:textColor="@android:color/white"
            android:textSize="@dimen/twenty_sp"
            android:textStyle="bold"
            android:visibility="gone"/>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true"
        android:padding="@dimen/fifteen_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/createddate"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvCreatedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twenty_dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/status"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:visibility="gone"
                android:background="@color/light_gray_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/subject"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/alerttype"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvAlertType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/fromuser"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvFromUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/touser"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvToUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCaseTitle"
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/_case"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvCase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
