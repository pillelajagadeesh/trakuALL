<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_dp"
        android:layout_alignParentTop="true"
        android:background="@color/menutoolbar">

        <RelativeLayout
            android:id="@+id/rlBack"
            android:layout_width="@dimen/thirty_dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/fifteen_dp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/twenty_dp"
                android:layout_height="@dimen/twenty_dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_icon"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/btEdit"
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="@dimen/twenty_dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/twenty_dp"
            android:background="@drawable/edit_btn"/>

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/fifteen_dp"
            android:layout_toRightOf="@+id/rlBack"
            android:textColor="@android:color/white"
            android:textSize="@dimen/twenty_sp"
            />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true"
        android:padding="@dimen/five_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/fifteen_dp"
            android:paddingRight="@dimen/fifteen_dp"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/serviceDate"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvServiceDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/status"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/createddate"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvCreateDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/modifieddate"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvModifiedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/notes"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/assigned_to"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvAssignedTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/case_description"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <TextView
                    android:id="@+id/tvCaseDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/images"
                    android:textColor="@color/menutoolbar"
                    android:textSize="@dimen/fifteen_dp"
                    />

                <LinearLayout
                    android:id="@+id/llImageLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/twelve_dp">

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/light_gray_bg"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
